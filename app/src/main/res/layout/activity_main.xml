<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Button
        android:id="@+id/btnCalc"
        android:text="TDEE計算"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtSexLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="性別" />
    <Spinner
        android:id="@+id/spinnerSex"
        android:spinnerMode="dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txtAgeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="年齢" />
    <EditText
        android:id="@+id/etAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="3"
        android:maxLines="1"
        android:inputType="number"
        android:hint="年齢を入力してください"/>
    <TextView
        android:id="@+id/txtBHLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="身長" />
    <EditText
        android:id="@+id/etBH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="5"
        android:maxLines="1"
        android:inputType="number"
        android:digits="0123456789."
        android:hint="身長(cm)を入力してください" />
    <TextView
        android:id="@+id/txtBWLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="体重" />
    <EditText
        android:id="@+id/etBW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="5"
        android:maxLines="1"
        android:inputType="number"
        android:digits="0123456789."
        android:hint="体重(kg)を入力してください"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtFRSLabel"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="ALSFRS6(自動計算):" />
        <TextView
            android:id="@+id/txtSumOfFRS"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/txtFRS1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="言語" />

    <Spinner
        android:id="@+id/spinnerFR1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog" />

    <TextView
        android:id="@+id/txtFRS2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="書字" />
    <Spinner
        android:id="@+id/spinnerFR2"
        android:spinnerMode="dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txtFRS3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="寝床の動作" />
    <Spinner
        android:id="@+id/spinnerFR3"
        android:spinnerMode="dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txtFRS4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="歩行" />
    <Spinner
        android:id="@+id/spinnerFR4"
        android:spinnerMode="dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txtFRS5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="着衣" />
    <Spinner
        android:id="@+id/spinnerFR5"
        android:spinnerMode="dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txtFRS6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="呼吸困難" />
    <Spinner
        android:id="@+id/spinnerFR6"
        android:spinnerMode="dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="※TDEE=BEE(Harris-Benedict)+(55.96xALSFRS-6)-168" />
</LinearLayout>
